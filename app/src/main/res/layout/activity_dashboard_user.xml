<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashboardUser">

    <LinearLayout
        android:id="@+id/toolbarDashboardUser"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_toolbar"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="User Dashboard"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gmailShowOnDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="abc@gmail.com"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logout_icon"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="22dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_gravity="right"
            app:shapeAppearanceOverlay="@style/styleCircleImage"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:layout_marginTop="-46dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="20dp"/>




    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        app:layout_constraintTop_toBottomOf="@id/toolbarDashboardUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:tabBackground="@drawable/custom_input"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabUnboundedRipple="false"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>