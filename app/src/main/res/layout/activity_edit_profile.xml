<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/viewtoolbar"
        android:orientation="vertical"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_toolbar"
        >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile Info"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-49dp"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/gray"
            android:src="@drawable/ic_baseline_person_24"
            app:shapeAppearance="@style/styleRoundeCornersImage" />

    </LinearLayout>

    <EditText
        android:id="@+id/editnameET"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/viewtoolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPersonName|textCapWords"
        android:background="@drawable/custom_input"
        android:hint="Name"
        android:paddingStart="20dp" />

    <Button
        android:id="@+id/updateBtnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editnameET"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_button"
        android:text="Update"
        android:textColor="@color/dark_Yellow" />
</RelativeLayout>