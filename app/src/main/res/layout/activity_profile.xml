<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <ImageView
        android:id="@+id/coverPic"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/toolbarProfileActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-32dp"
        android:src="@drawable/coverpic" />
    <RelativeLayout
        android:id="@+id/toolbarProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_baseline_edit_24" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:background="@drawable/shape_sect1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:background="@color/gray"
        android:src="@drawable/ic_baseline_person_24"
        app:shapeAppearance="@style/styleRoundeCornersImage" />
    <TextView
        android:id="@+id/nameIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name "
        android:textColor="@color/dark_Yellow"
        android:textStyle="bold"
        android:layout_below="@id/coverPic"
        android:layout_toEndOf="@id/profileIv"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/emailIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coverPic"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/profileIv"
        android:text="user@gmail.com"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/tabMembership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabUsertype"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input"
        android:gravity="center">

        <TextView
            android:id="@+id/membershipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="membership Date :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/membershipIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabUsertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileIv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input"
        android:gravity="center">

        <TextView
            android:id="@+id/accountStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-35dp"
            android:layout_marginTop="-10dp"
            android:text="Account status :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accountStatusIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="3dp"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/userTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="-90dp"
            android:text="User Type :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userTypeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabMembership"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input">

        <TextView
            android:id="@+id/favoriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:text="Favorite books :"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/favoriteBookCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:text="N/A"
            android:layout_toEndOf="@id/favoriteLabel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favBooksView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/favoriteLabel"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_fav_books" />


    </RelativeLayout>



</RelativeLayout>